package bunny;
import java.util.*;
class tree
{
	public void leaves() 
	{
		System.out.println("sum of natural numbers");
	}
}
class plant extends tree
{
	public void root(int n)
	{
		int i,x=0;
		for(i=1;i<=n;i++)
		  x=x+i;
		System.out.println(x);
				
	}
}



public class single_inh {

	public static void main(String[] args) {
		Scanner s=new Scanner(System.in);
		int n;
		n=s.nextInt();
		tree h=new tree();
		plant z=new plant();
		z.leaves();
		z.root(n);

	}

}
